<div class="container">

  <div class="row">
    <div class="col-lg-5">
      <img src="<%= user.profileImageSRC %>" alt="<%= user.username %>"><br>
      <a href="/user/images/new" class="btn btn-outline-primary">Add image</a>
    </div>
    <div class="col-lg-1"></div>
    <div class="col-lg-5 gallery">
      <h1 class="col-lg-12"><%= user.username %></h1>
      <h3>Gallery</h3>
      <ul class="imagesList">
      <% user.images.forEach((image) => { %>
        <li class="col-lg-6"><img class="thumbnail" src="<%= image.src %>"></li>
        <li><%= image.caption %></li>
        <% }) %>
      </ul>
    </div>
  </div>
</div>
