<section>
  <div class="container">
    <h1>Edit</h1>

    <form method="POST" action="/pubs/<%= pub.id %>">
      <input type="hidden" name="_method" value="PUT">
      <div>
        <label for="name">Name</label>
        <input type="text" name="name" id="name" value="<%= pub.name %>" class="form-control">
      </div>
      <div>
        <label for="address">Address</label>
        <input type="text" name="address" id="address" value="<%= pub.address %>" class="form-control">
      </div>
      <div>
        <label for="expensiveness">Expensiveness</label>
        <input type="number" name="expensiveness" id="expensiveness" value="<%= pub.expensiveness %>" class="form-control">
      </div>
      <div>
        <label for="atmosphere">Atmosphere</label>
        <input type="number" name="atmosphere" id="atmosphere" value="<%= pub.atmosphere %>" class="form-control">
      </div>
      <div>
        <label for="comment">Comment</label>
        <textarea name="comment" class="form-control"><%= pub.comment %></textarea>
      </div>
      <button class="btn btn-outline-danger">Update Pub</button>
    </form>
  </div>
</section>
